{
  "name": "tailwind-color-matcher",
  "displayName": "Tailwind Color Matcher",
  "description": "Tailwind Color Matcher: Enhance your VSCode workflow by translating HEX colors to Tailwind CSS classes instantly. Use the color picker for easy class suggestions and management.",
  "publisher": "OmriGrossman",
  "version": "1.0.2",
  "icon": "assets/tailwind-color-matcher-ext-logo.png",
  "galleryBanner": {
    "color": "#6490d7",
    "theme": "light"
  },
  "engines": {
    "vscode": "^1.82.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/OmriGM/tailwind-color-matcher"
  },
  "categories": [
    "Visualization",
    "Other"
  ],
  "keywords": [
    "tailwind",
    "css",
    "style",
    "color-customization",
    "color",
    "color-tokenizer",
    "color-picker"
  ],
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  },
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "tailwindColorMatcher",
          "title": "Tailwind Color Matcher",
          "icon": "assets/tailwind-color-match-logo.svg"
        }
      ]
    },
    "views": {
      "tailwindColorMatcher": [
        {
          "type": "webview",
          "id": "tailwindColorMatcherView",
          "name": "Tailwind Color Matcher"
        }
      ]
    },
    "commands": [
      {
        "category": "Tailwind Color Matcher",
        "command": "tailwind-color-matcher.matchColor",
        "title": "Match Color"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.82.0",
    "@typescript-eslint/eslint-plugin": "^6.4.1",
    "@typescript-eslint/parser": "^6.4.1",
    "@vscode/test-electron": "^2.3.4",
    "eslint": "^8.47.0",
    "glob": "^10.3.3",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.1",
    "mocha": "^10.2.0",
    "prettier": "3.0.3",
    "ts-loader": "^9.4.4",
    "typescript": "^5.1.6",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "@vscode/webview-ui-toolkit": "^1.2.2",
    "mixpanel": "^0.18.0",
    "nearest-color": "^0.4.4"
  }
}
